<?xml version='1.0' encoding='utf-8'?>
<widget id="com.project181.medalarm" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MedAlarm</name>
    <description>
        An app that utilizes the use of ALARMS for notifying users to take medications.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Project181-Canon Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-sqlite-storage" spec="^2.1.1" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="git+https://github.com/Telerik-Verified-Plugins/LocalNotification.git" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.4" />
    <plugin name="cordova-plugin-background-mode" spec="^0.7.2" />
</widget>
